{% extends 'base.html.twig' %}

{% block title %}Create an article{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <h1>Add a new article</h1>
            <br>


            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_row(form.title) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.author) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.content, {'attr': {'rows': '20'}}) }}
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
