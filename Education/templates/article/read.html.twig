{% extends 'base.html.twig' %}

{% block title %}Article: {{ article.title }}{% endblock %}

{% block body %}

    {# {{ dump(title) }} #}

    <div class="row">
        <div class="col-md-12">
            <h1>{{ article.title }}</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <p>{{ article.content }}</p>
        </div>
    </div>

    <hr>

    <div class="row">
        <div class="col-md-12">
            {# Twig filter documentation : https://twig.symfony.com/doc/2.x/ #}
            <h2>Comments ({{ comments|length }})</h2>

            <ul>
                {% for comment in comments %}
                    <li>{{ comment }}</li>
                {% endfor %}
            </ul>
        </div>
    </div>

{% endblock %}
